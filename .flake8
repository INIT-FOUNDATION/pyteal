[flake8]
ignore =
    E203,
    E241,
    W291,
    E302,
    E501,
    W503,
    E741,

per-file-ignores =
    pyteal/compiler/optimizer/__init__.py:          F401
    pyteal_examples/application/abi/algobank.py:           F403, F405
    pyteal_examples/application/asset.py:                  F403, F405
    pyteal_examples/application/opup.py:                   F403, F405
    pyteal_examples/application/security_token.py:         F403, F405
    pyteal_examples/application/vote.py:                   F403, F405
    pyteal_examples/signature/atomic_swap.py:              F403, F405
    pyteal_examples/signature/basic.py:                    F403, F405
    pyteal_examples/signature/dutch_auction.py:            F403, F405
    pyteal_examples/signature/periodic_payment_deploy.py:  F403, F405
    pyteal_examples/signature/recurring_swap.py:           F403, F405
    pyteal_examples/signature/split.py:                    F403, F405
    pyteal_examples/signature/periodic_payment.py:         F403, F405
    pyteal_examples/signature/recurring_swap_deploy.py:    F403, F405
    pyteal/__init__.py:                             F401, F403
    pyteal/ir/ops.py:                               E221
    tests/unit/module_test.py:                      F401, F403

# from flake8-tidy-imports
ban-relative-imports = true
